<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AndroidGlass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/accent_purple</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSurface">@color/bg_dark_start</item>
        <item name="android:windowBackground">@color/bg_dark_start</item>
        <item name="android:statusBarColor">@color/bg_dark_start</item>
        <item name="android:navigationBarColor">@color/bg_dark_start</item>
    </style>

    <style name="GlassCard" parent="">
        <item name="android:background">@drawable/bg_glass_card</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="GlassButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/selector_glass_button</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="GlassButtonAccent" parent="GlassButton">
        <item name="android:background">@drawable/selector_glass_button_accent</item>
    </style>

    <style name="GlassSectionTitle" parent="">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:alpha">0.7</item>
    </style>
</resources>
