<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Header card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:elevation="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/text_primary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Liquid Glass UI Demo"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- SECTION: Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_buttons"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btnPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_primary"
                        android:layout_marginEnd="8dp"
                        style="@style/GlassButtonAccent" />

                    <Button
                        android:id="@+id/btnSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_secondary"
                        style="@style/GlassButton" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnOutlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_outlined"
                    style="@style/GlassButton" />
            </LinearLayout>

            <!-- SECTION: Input Fields -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_inputs"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_glass_input"
                    android:hint="@string/hint_name"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="textPersonName"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_glass_input"
                    android:hint="@string/hint_email"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/inputMessage"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:background="@drawable/bg_glass_input"
                    android:hint="@string/hint_message"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- SECTION: Dropdown / ComboBox -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_dropdown"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <Spinner
                    android:id="@+id/spinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_glass_input"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:entries="@array/dropdown_options"
                    android:popupBackground="@color/bg_mid" />
            </LinearLayout>

            <!-- SECTION: Selection Controls -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_selection"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/checkBlur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable blur effect"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent_blue"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/checkAnimations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable animations"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent_blue"
                    android:checked="true"
                    android:layout_marginTop="4dp" />

                <CheckBox
                    android:id="@+id/checkDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark mode background"
                    android:textColor="@color/text_primary"
                    android:buttonTint="@color/accent_blue"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_border"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/radioGroupStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioFrosted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frosted Glass"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/accent_purple"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioLiquid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liquid Glass"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/accent_purple"
                        android:layout_marginTop="4dp" />

                    <RadioButton
                        android:id="@+id/radioCrystal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crystal Glass"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/accent_purple"
                        android:layout_marginTop="4dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- SECTION: Progress & Seek -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_progress"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loadingâ€¦ 65%"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:progress="65"
                    android:progressTint="@color/accent_blue"
                    android:progressBackgroundTint="@color/glass_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:progress="40"
                    android:progressTint="@color/accent_teal"
                    android:thumbTint="@color/accent_teal" />
            </LinearLayout>

            <!-- SECTION: Chips & Tags -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_chips"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBlur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blur"
                        android:checkable="true"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="@color/glass_fill_medium"
                        app:chipStrokeColor="@color/glass_border"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="true"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGlass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass"
                        android:checkable="true"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="@color/glass_fill_medium"
                        app:chipStrokeColor="@color/glass_border"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="@color/glass_fill_medium"
                        app:chipStrokeColor="@color/glass_border"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dark"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="@color/glass_fill_medium"
                        app:chipStrokeColor="@color/glass_border"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAurora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aurora"
                        android:checkable="true"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        app:chipBackgroundColor="@color/glass_fill_medium"
                        app:chipStrokeColor="@color/glass_border"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <!-- SECTION: Contact List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_list"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="24dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerContacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />
            </LinearLayout>

            <!-- SECTION: Dialogs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_dialogs"
                android:layout_marginBottom="8dp"
                style="@style/GlassSectionTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/btnShowDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_show_dialog"
                    style="@style/GlassButtonAccent" />

                <Button
                    android:id="@+id/btnShowBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_show_bottom_sheet"
                    style="@style/GlassButton" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
